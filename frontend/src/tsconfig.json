{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@components": [
        "./components"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@design-system": [
        "./components/design-system"
      ],
      "@design-system/*": [
        "./components/design-system/*"
      ],
      "@system-design": [
        "./components/system-design"
      ],
      "@system-design/*": [
        "./components/system-design/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@stores/*": [
        "./stores/*"
      ],
      "@types": [
        "./types"
      ],
      "@types/*": [
        "./types/*"
      ]
    },
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "files": [
    "next-env.d.ts",
    "types/svg.d.ts",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
