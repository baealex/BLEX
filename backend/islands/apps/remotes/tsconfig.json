{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "@templates/*": [
                "../../../src/board/templates/*"
            ],
            "alpinejs": [
                "./node_modules/@types/alpinejs",
                "./node_modules/alpinejs"
            ]
        }
    },
    "include": [
        "src",
        "../../packages/editor/src/utils/languages.ts",
        "../../../src/board/templates/**/*.alpine.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
